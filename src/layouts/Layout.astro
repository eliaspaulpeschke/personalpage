---
export interface Props {
	title: string;
}
import Navbar from '../components/Navbar.astro';
import Background from '../components/Background.astro';
import Footer from '../components/Footer.astro';

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="de">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content="Personal Portfolio of Elias Peschke">
		<meta name="author" content="Elias Peschke">
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Elias Peschke | {title} </title>
	</head>
	<body>
            <div id="background">
	            <header> 
                    <Navbar /> 
	            </header>
                
	            <slot />

                <footer>
                    <Footer />
                </footer>
			    
                <Background />
	        </div>
            <div id="backpane"></div>
	</body>
</html>
<style is:global>

@font-face {
  font-family: "Quicksand";
  src: local("Quicksand"),
    url("/Quicksand-VariableFont_wght.ttf") format("truetype");
}

	
/* colors: #F3F0ED #C35751 #9FBAA9 #343B3B #587164*/
* {
    font-family: 'Quicksand', sans-serif;
    overflow-wrap: break-word;
    box-sizing: border-box;
    padding:0;
    margin:0;
}

.textbox{
        text-align: left;
    }
.block h3{
        margin-bottom:10px;
    }

.block-container{
        display: flex;
        gap: 40px;
        flex-wrap: wrap;
    }

.block{
        background-color: #fff1;
        backdrop-filter: blur(10px);
        padding: 25px;
        border-left: 40px solid white;
}

.small{
        max-width: 400px;
        min-width: 300px;
        max-height: 365px;
}

header, #main, footer{
    margin-bottom:45px;
}

#backpane{
        position: absolute;
        padding: 0;
        margin: 0;
        top:0;
        height: 100%;
        left: 0;
        right: 0;
        background-color: white;    
        background-image: url("/PageBackpane@0,5x-wh.jpg");
        background-position: center;
        background-size: 100vw;
        background-repeat: repeat-y;
        z-index: -1000;

    }

#background{
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border: none;
    padding: 30px;
    margin: 30px;
    overflow: scroll;
    background-color: transparent;
}

h1{
    font-weight: 100;
    font-size: 5rem;
}

h2{
    font-size: 3rem;
    font-weight: 100;
}

h3{
    font-weight: 100;
    font-size: 2rem;
}

.nav-container{
	background-color: #fff1;
    backdrop-filter: blur(10px);
	border-left: 40px solid white;
    /*border-right: 2px solid white;*/
    max-width: 50vw;;
    display: flex;
    align-items: center;
    justify-items: center;
	color:black;
}

.nav{
    margin: 0;
    padding: 20px;
    width: 100%;
    height: 100%;
    font-style: normal;
    text-decoration: none;
    border: none;
    transition: all .1s ease-out;
	color: black;
}

.nav:hover{
    background-color: black;
    color: white;
}

.video{
    aspect-ratio: 16/9 !important;
    height: 100%;
    min-width: 650px;
}

.placeholder{
    aspect-ratio: 16/9 !important;
    height: 100%;
    min-width: 650px;

}


@media (max-width: 900px) {
    .block-container{
            flex-direction: column;
    }

    .placeholder{
    aspect-ratio: unset;
    min-width: unset;
    height: 100%;
    max-width: 70vw;

    }

    .video{
        min-width: unset;
        min-height: 39.3vw;
        max-width: 70vw;
       }

    .small{
        max-height: fit-content;
        max-width: 70vw !important;
    }

#background{
    padding: 10px;
    margin: 10px;
}
 h1{
    font-size: 3rem;
 }
 h3{
    font-size: 1.3rem;
 }
 .nav-container{
    flex-direction: column;
    max-width: 95vw;
 }
 #heading{
    max-width: 95vw;
    margin: auto;
}
#main{
    max-width: 95vw;
}

}
</style>
