---
interface Props {
	title: string;
}

const {title} = Astro.props;
---
<div class="block">
 <h3>{title}</h3>
 <slot />
</div>


<style>
h3{
        margin-bottom:20px;
}

.block{
	margin-block: 2rem;
        background-color: #fff1;
        backdrop-filter: blur(10px);
	padding: 25px;
	border-left: 40px solid black;

}
</style>
